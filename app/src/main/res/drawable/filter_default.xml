<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffd9f8ff" />
            <solid android:color="@color/borderColor" />
        </shape>
    </item>
    <item android:left="1dp" android:right="0dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFDDDDDD" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item android:left="5dp" android:right="0dp">
        <shape
            android:shape="rectangle">
        <stroke android:width="1dp" android:color="@color/borderColor" />
        </shape>
    </item>
    <item android:left="1dp" android:top="0dp" android:bottom="0dp" android:right="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/btnBackgroundDefault" />
        </shape>
    </item>

</layer-list>