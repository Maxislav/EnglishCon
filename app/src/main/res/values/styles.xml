<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>


    <style name="DarkActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DarkTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="AppThemeRow">
        <item name="android:paddingBottom">
            10dp
        </item>
        <item name="android:paddingTop">
            10dp
        </item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">#33E7E7E7</item>
    </style>
    <style name="RowLayou">
        <item name="android:layout_height">
           wrap_content
        </item>
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:orientation">
            horizontal
        </item>
        <item name="android:padding">
            15dp
        </item>
        <item name="android:background">
            @drawable/shadow
        </item>
    </style>
    <style name="btn">
        <item name="android:background">
            @drawable/whatever
        </item>
        <item name="android:layout_margin">
            0dp
        </item>
    </style>
    <style name="btnSmall">
        <item name="android:background">
            @drawable/filter
        </item>
        <item name="android:layout_margin">
            0dp
        </item>
        <item name="android:padding">
          0dp
        </item>
        <item name="android:textSize">
            10dp
        </item>
        <item name="android:layout_height">
            33dp
        </item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_weight">
            1
        </item>
    </style>
    <style name="SearchView">
        <item name="android:background">
            @drawable/search
        </item>
    </style>


</resources>
